.wrap {
  margin: 200px auto;
  /* transform: scale(1); */
  width: 500rpx;
  height: 500rpx;
  border: 2rpx solid #000000;
  transition: all 0.3;
}

.box {
  position: fixed;
  inset: 0;
  top: 0px;
  left: 0px;
  width: 200rpx;
  height: 200rpx;
  background-color: black;
  transition: all 0.3;
}

.box2 {
  position: absolute;
  top: 0px;
  left: 0px;
  width: 200rpx;
  height: 200rpx;
  background-color: green;
  transition: all 0.3;
}

.box.active {
  top: 200rpx;
  left: 200rpx;
}