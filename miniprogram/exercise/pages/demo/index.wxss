.wrap {
  position: relative;
  width: 500rpx;
  height: 500rpx;
  border: 2rpx solid #000000;
  margin: 200rpx auto;
}

.box {
  width: 200rpx;
  height: 200rpx;
  background-color: red;
  position: absolute;
  top: 0;
  left: 0;
  transition: top 0.5s, left 0.5s;
}

.box.active {
  top: 200rpx;
  left: 200rpx;
}